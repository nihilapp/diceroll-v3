{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "eslint.config.mjs",
    "process.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}